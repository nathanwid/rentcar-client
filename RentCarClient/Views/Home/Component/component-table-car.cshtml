<script type="text/template" id="component-table-car">
    <div class="row mt-3">
        <% if (data.length > 0) { %>
            <% _.each(data, function(item) { %>
                <div class="col-md-4 mb-4">
                    <div class="card">
                        <div class="image-container">
                            <img src="<%= item.image_url %>" class="card-img-top" alt="<%= item.name %>">
                        </div>
                        <div class="card-body text-center">
                            <h5 class="card-title"><%= item.name %> <%= item.transmission === 'Automatic' ? 'AT' : item.transmission %>  <%= item.year %></h5>
                            <p class="card-text">Harga: Rp<%= item.price_per_day %>/hari</p>
                            <button class="btn btn-primary">Sewa</button>
                        </div>
                    </div>
                </div>
            <% }); %>
        <% } else { %>
            <div class="col-12">
                <div class="alert alert-warning text-center">No data found</div>
            </div>
        <% } %>
    </div>
</script>

<style>
    .card {
        border: none;
        border-radius: 8px;
        background-color: #BDE0FE;
    }

    .image-container {
        width: 100%;
        height: 200px; 
        overflow: hidden; 
        border-radius: 8px; 
        background-color: #f8f9fa; 
    }

    .card-img-top {
        width: 100%; 
        height: 100%; 
        object-fit: cover; 
    }

    .card-body {
        text-align: center;
    }

    .card-title {
        margin: 0.5rem 0; 
    }

    .card-text {
        margin-bottom: 1rem; 
    }

</style>